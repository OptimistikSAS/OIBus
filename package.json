{
  "name": "oibus",
  "version": "2.4.0",
  "main": "index.js",
  "author": "Optimistik SAS",
  "license": "EUPL",
  "engines": {
    "node": ">=v16.17.0",
    "npm": ">=8.15.0"
  },
  "scripts": {
    "start": "npm run internal:build:backend -- --sourceMap && npm run start:backend",
    "start:macos": "./build/bin/macos/oibus --config ./data-folder",
    "start:win": ".\\build\\bin\\win\\oibus.exe --config .\\data-folder",
    "start:linux": "./build/bin/linux/oibus --config ./data-folder",
    "start:backend": "node ./build/backend/src/index.js --config ./data-folder/oibus.json",
    "watch:web-client": "webpack --mode development --watch --config webpack.frontend.js",
    "test": "jest --coverage --modulePathIgnorePatterns='.*\\.test\\.js$'",
    "test:setup-env": "docker-compose --file ./tests/docker-compose.yml --env-file ./tests/.env.test up -d",
    "test:integration": "jest --testPathPattern='.*\\.test\\.js$'",
    "lint": "eslint src --ext .jsx --ext .js",
    "lint:fix": "eslint src --ext .jsx --ext .js --fix",
    "build:all": "npm ci && npm run build:win && npm run build:macos && npm run build:macos-arm64 && npm run build:linux",
    "build:win": "npm run internal:build:web-client && npm run internal:build:backend -- --removeComments && npm run internal:build:lib-win && rimraf ./build/bin/win && pkg ./build/backend/src/index.js --public --compress GZip --config package.json --output ./build/bin/win/oibus --target node16-win-x64 && ncp ./build/deps/win/HdaAgent ./build/bin/win/HdaAgent && ncp ./build/deps/win/nssm.exe ./build/bin/win/nssm.exe && ncp ./LICENSE ./build/bin/win/LICENSE",
    "build:macos": "npm run internal:build:web-client && npm run internal:build:backend -- --removeComments && npm run internal:build:lib-macos && rimraf ./build/bin/macos && pkg ./build/backend/src/index.js --public --compress GZip --config package.json --output ./build/bin/macos/oibus --target node16-macos-x64",
    "build:macos-arm64": "npm run internal:build:web-client && npm run internal:build:backend -- --removeComments && npm run internal:build:lib-macos-arm64 && rimraf ./build/bin/macos-arm64 && pkg --debug ./build/backend/src/index.js --public --compress GZip --config package.json --output ./build/bin/macos-arm64/oibus --target node16-macos-arm64",
    "build:linux": "npm run internal:build:web-client && npm run internal:build:backend -- --removeComments && npm run internal:build:lib-linux && rimraf ./build/bin/linux && pkg ./build/backend/src/index.js --public --compress GZip --config package.json --output ./build/bin/linux/oibus --target node16-linux-x64 && ncp ./build/deps/linux ./build/bin/linux && ncp ./src/config/default-config.json ./build/bin/linux/default-config.json",
    "build:win-setup": "rimraf ./build/bin/win/win-setup-release && C:\\\"Program Files (x86)\"\\\"Inno Setup 6\"\\iscc.exe \"./build/deps/win/setup.iss\" \"/DMyAppVersion=\"%npm_package_version% \"/DMyCertFile=\"%PFX_PATH% \"/DMyCertPassword=\"%PFX_PASSWORD% \"/ssigntool=./build/deps/signtool/signtool.exe sign /debug $p\"",
    "internal:build:lib-win": "npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.16.0 --arch=x64",
    "internal:build:lib-macos": "npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.16.0 --arch=x64",
    "internal:build:lib-macos-arm64": "npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.16.0 --arch=arm64",
    "internal:build:lib-linux": "npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.16.0 --arch=x64",
    "internal:build:web-client": "webpack --mode production --config webpack.frontend.js",
    "internal:build:backend": "tsc"
  },
  "keywords": [
    "Optimistik"
  ],
  "browserslist": [
    "last 2 chrome versions",
    "last 2 safari versions",
    "last 2 edge versions",
    "last 2 firefox versions",
    "firefox esr"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "3.223.0",
    "@aws-sdk/node-http-handler": "3.222.0",
    "@koa/cors": "4.0.0",
    "@koa/multer": "3.0.0",
    "@koa/router": "12.0.0",
    "ads-client": "1.14.1",
    "basic-auth": "2.0.1",
    "better-sqlite3": "8.0.1",
    "form-data": "4.0.0",
    "humanize-duration": "3.27.3",
    "jsmodbus": "4.0.6",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-helmet": "6.1.0",
    "koa-respond": "2.1.0",
    "koa-send": "5.0.1",
    "luxon": "3.1.1",
    "micromatch": "4.0.5",
    "minimist": "1.2.7",
    "mongodb": "4.12.1",
    "mqtt": "4.3.7",
    "mqtt-wildcard": "3.0.9",
    "mssql": "9.0.1",
    "mysql2": "2.3.3",
    "nanoid": "4.0.0",
    "node-fetch": "2.6.7",
    "node-opcua-certificate-manager": "2.85.0",
    "node-opcua-client": "2.85.0",
    "object-path": "0.11.8",
    "papaparse": "5.3.2",
    "pg": "8.8.0",
    "pino": "8.7.0",
    "pino-abstract-transport": "1.0.0",
    "pino-pretty": "9.1.1",
    "pino-roll": "1.0.0-rc.1",
    "proxy-agent": "5.0.0",
    "selfsigned": "2.1.1",
    "sprintf-js": "1.1.2",
    "thread-stream": "2.2.0",
    "timexe": "1.0.6"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.20.5",
    "@babel/eslint-parser": "7.19.1",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.18.6",
    "@babel/plugin-proposal-optional-chaining": "7.18.9",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@types/jest": "29.2.4",
    "@types/luxon": "3.1.0",
    "babel-jest": "29.3.1",
    "babel-loader": "9.1.0",
    "bootstrap": "5.2.3",
    "css-loader": "6.7.2",
    "dotenv": "16.0.3",
    "eslint": "8.29.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-webpack-plugin": "3.2.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jsondiffpatch": "0.4.1",
    "monaco-editor": "0.34.1",
    "monaco-editor-webpack-plugin": "7.0.1",
    "ncp": "2.0.0",
    "path-browserify": "1.0.1",
    "pkg": "5.8.0",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-flow-renderer": "10.3.17",
    "react-icons": "4.7.1",
    "react-router": "6.4.4",
    "react-router-dom": "6.4.4",
    "reactstrap": "9.1.5",
    "rimraf": "3.0.2",
    "standard-version": "9.5.0",
    "style-loader": "3.3.1",
    "typescript": "4.9.3",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.0"
  },
  "optionalDependencies": {
    "oracledb": "5.5.0",
    "odbc": "2.4.6"
  },
  "jest": {
    "globalSetup": "./tests/jest-config.js",
    "coverageDirectory": "./tests/coverage",
    "moduleNameMapper": {
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/file.mock.js",
      "monaco-editor": "<rootDir>/tests/__mocks__/monaco-editor.mock.js",
      "nanoid": "<rootDir>/tests/__mocks__/nanoid.mock.js",
      "oracledb": "<rootDir>/tests/__mocks__/oracledb.mock.js"
    }
  },
  "pkg": {
    "scripts": [
      "node_modules/vm2/lib/setup-sandbox.js",
      "node_modules/thread-stream/lib/worker.js",
      "node_modules/pino/lib/worker.js"
    ],
    "assets": [
      "build/web-client/**/*",
      "build/backend/src/service/logger/sqlite-transport.js",
      "build/backend/src/service/logger/loki-transport.js",
      "node_modules/sqlite3/**/*.node",
      "node_modules/oracledb/**/*.node",
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node"
    ]
  }
}
