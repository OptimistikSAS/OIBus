{
  "name": "oibus",
  "version": "2.0.5",
  "main": "index.js",
  "author": "Optimistik SAS",
  "license": "EUPL",
  "engines": {
    "node": ">=v16.13.0",
    "npm": ">=8.1.0"
  },
  "scripts": {
    "start": "node src/index.js --config ./tests/oibus.json",
    "start-macos": "./dist/macos/oibus --config ./tests/oibus.json",
    "start-win": ".\\dist\\win\\oibus.exe --config .\\tests\\oibus.json",
    "start-linux": "./dist/linux/oibus --config ./tests/oibus.json",
    "build": "npm ci && npm run build-win && npm run build-macos && npm run build-linux",
    "build-client": "webpack --mode production",
    "build-lib-win": "node-pre-gyp --directory ./node_modules/sqlite3 install --target_platform=win32 --target_arch=x64 && npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.15.0 --arch=x64",
    "build-lib-macos": "node-pre-gyp --directory ./node_modules/sqlite3 install --target_platform=darwin --target_arch=x64 && npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.15.0 --arch=x64",
    "build-lib-linux": "node-pre-gyp --directory ./node_modules/sqlite3 install --target_platform=linux --target_libc=glibc --target_arch=x64 && npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.15.0 --arch=x64",
    "build-win": "npm run build-client && npm run build-lib-win && rimraf ./dist/win && pkg ./src/index.js --public --compress GZip --config package.json --output ./dist/win/oibus --target node16-win-x64 && ncp ./deps/win ./dist/win",
    "build-macos": "npm run build-client && npm run build-lib-macos && rimraf ./dist/macos && pkg ./src/index.js --public --compress GZip --config package.json --output ./dist/macos/oibus --target node16-macos-x64",
    "build-linux": "npm run build-client && npm run build-lib-linux && rimraf ./dist/linux && pkg ./src/index.js --public --compress GZip --config package.json --output ./dist/linux/oibus --target node16-linux-x64 && ncp ./deps/linux ./dist/linux && ncp ./src/config/defaultConfig.json ./dist/linux/defaultConfig.json",
    "build-win-setup": "rimraf ./dist/win/win-setup-release && C:\\\"Program Files (x86)\"\\\"Inno Setup 6\"\\iscc.exe \"./deps/win/oibus_setup.iss\" \"/DMyAppVersion=\"%npm_package_version%",
    "start-client": "webpack --mode development --watch",
    "test": "jest --coverage",
    "lint": "eslint src --ext .jsx --ext .js",
    "lint-fix": "eslint src --ext .jsx --ext .js --fix",
    "version": "npm run build && gulp build-archives",
    "postversion": "git push && git push --tags",
    "bump": "standard-version -i CHANGELOG.md",
    "postbump": "git push --follow-tags origin",
    "setup-dev-env": "cd local-development && docker-compose --env-file ./.env.dev up",
    "seed-destinations": "node ./local-developent/database-seeder/seed-db.js"
  },
  "keywords": [
    "Optimistik"
  ],
  "browserslist": [
    "last 2 chrome versions",
    "last 2 safari versions",
    "last 2 edge versions",
    "last 2 firefox versions",
    "firefox esr"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "3.127.0",
    "@aws-sdk/node-http-handler": "3.127.0",
    "@koa/cors": "3.3.0",
    "@koa/multer": "3.0.0",
    "@koa/router": "11.0.1",
    "ads-client": "1.13.2",
    "axios": "0.27.2",
    "basic-auth": "2.0.1",
    "better-sqlite3": "7.6.0",
    "bootstrap": "5.1.3",
    "form-data": "4.0.0",
    "humanize-duration": "3.27.2",
    "humanize-string": "2.1.0",
    "jsmodbus": "4.0.6",
    "jsondiffpatch": "0.4.1",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-helmet": "6.1.0",
    "koa-respond": "2.1.0",
    "koa-send": "5.0.1",
    "luxon": "3.0.1",
    "micromatch": "4.0.5",
    "minimist": "1.2.6",
    "monaco-editor": "0.33.0",
    "mongodb": "4.7.0",
    "mqtt": "4.3.7",
    "mqtt-wildcard": "3.0.9",
    "mssql": "8.1.2",
    "mysql2": "2.3.3",
    "nanoid": "3.3.4",
    "node-fetch": "2.6.7",
    "node-opcua": "2.72.0",
    "node-opcua-certificate-manager": "2.71.0",
    "object-path": "0.11.8",
    "papaparse": "5.3.2",
    "pg": "8.7.3",
    "pino": "https://github.com/burgerni10/pino.git",
    "pino-abstract-transport": "1.0.0",
    "pino-pretty": "8.1.0",
    "prop-types": "15.8.1",
    "proxy-agent": "5.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-flow-renderer": "10.3.8",
    "react-icons": "4.4.0",
    "react-router": "6.3.0",
    "react-router-dom": "6.3.0",
    "reactstrap": "9.1.1",
    "real-require": "0.1.0",
    "selfsigned": "2.0.1",
    "sprintf-js": "1.1.2",
    "sqlite": "4.1.1",
    "sqlite3": "5.0.8",
    "thread-stream": "https://github.com/burgerni10/thread-stream.git",
    "timexe": "1.0.5",
    "tunnel": "0.0.6"
  },
  "devDependencies": {
    "@babel/cli": "7.18.6",
    "@babel/core": "7.18.6",
    "@babel/eslint-parser": "7.18.2",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.18.6",
    "@babel/plugin-proposal-optional-chaining": "7.18.6",
    "@babel/preset-env": "7.18.6",
    "@babel/preset-react": "7.18.6",
    "babel-jest": "28.1.2",
    "babel-loader": "8.2.5",
    "css-loader": "6.7.1",
    "eslint": "8.19.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-webpack-plugin": "3.2.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "28.1.2",
    "jest-environment-jsdom": "28.1.2",
    "monaco-editor-webpack-plugin": "7.0.1",
    "ncp": "2.0.0",
    "path-browserify": "1.0.1",
    "pkg": "5.7.0",
    "rimraf": "3.0.2",
    "standard-version": "9.5.0",
    "style-loader": "3.3.1",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0"
  },
  "optionalDependencies": {
    "oracledb": "5.4.0"
  },
  "jest": {
    "globalSetup": "./jest-config.js",
    "moduleNameMapper": {
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "monaco-editor": "<rootDir>/__mocks__/monacoEditorMock.js",
      "nanoid": "<rootDir>/__mocks__/nanoidMock.js"
    },
    "fakeTimers": {
       "enableGlobally": true
    }
  },
  "pkg": {
    "scripts": [
      "node_modules/vm2/lib/setup-sandbox.js",
      "node_modules/thread-stream/lib/worker.js",
      "node_modules/pino/lib/worker.js"
    ],
    "assets": [
      "build/**/*",
      "node_modules/sqlite3/**/*.node",
      "node_modules/oracledb/**/*.node",
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node",
      "src/config/defaultConfig.json"
    ]
  }
}
