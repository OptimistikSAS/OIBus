{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strictNullChecks": false,

    "target": "es5",
    "outDir": "./dist/backend"
  },
  "include": [
    "**/*",
    "node_modules/nanoid/**/*"
  ],
  "exclude": [
    "webpack.frontend.js",
    "frontend",
    "tests",
    "dist",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.d.ts"
  ]
}
