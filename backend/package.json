{
  "name": "oibus",
  "version": "2.4.0",
  "main": "index.js",
  "author": "Optimistik SAS",
  "license": "EUPL",
  "engines": {
    "node": ">=v16.17.0",
    "npm": ">=8.15.0"
  },
  "scripts": {
    "start:macos": "../build/bin/macos/oibus --config ../data-folder",
    "start:win": "..\\build\\bin\\win\\oibus.exe --config ..\\data-folder",
    "start:linux": "../build/bin/linux/oibus --config ../data-folder",
    "build:all": "npm run build:win && npm run build:macos && npm run build:linux",
    "build:win": "npm run internal:build:lib-win && rimraf ../build/bin/win && pkg ./dist/backend/index.js --public --compress GZip --config package.json --output ../build/bin/win/oibus --target node16-win-x64 && ncp ../build/deps/win/HdaAgent ../build/bin/win/HdaAgent && ncp ../build/deps/win/nssm.exe ../build/bin/win/nssm.exe && ncp ../LICENSE ../build/bin/win/LICENSE",
    "build:macos": "npm run internal:build:lib-macos && rimraf ../build/bin/macos && pkg ./dist/backend/index.js --public --compress GZip --config package.json --output ../build/bin/macos/oibus --target node16-macos-x64",
    "build:linux": "npm run internal:build:lib-linux && rimraf ../build/bin/linux && pkg ./dist/backend/index.js --public --compress GZip --config package.json --output ../build/bin/linux/oibus --target node16-linux-x64 && ncp ../build/deps/linux ../build/bin/linux && ncp src/config/default-config.json ../build/bin/linux/default-config.json",
    "build:win-setup": "rimraf ../build/bin/win/win-setup-release && C:\\\"Program Files (x86)\"\\\"Inno Setup 6\"\\iscc.exe \"../build/deps/win/setup.iss\" \"/DMyAppVersion=\"%npm_package_version% \"/DMyCertFile=\"%PFX_PATH% \"/DMyCertPassword=\"%PFX_PASSWORD% \"/ssigntool=../build/deps/signtool/signtool.exe sign /debug $p\"",
    "start": "tsc --sourceMap --project tsconfig.app.json && npm run start:backend",
    "start:backend": "node ./dist/backend/src/index.js --config ../data-folder",
    "test": "jest --config=src/tests/jest-ts.config.js --coverage",
    "test:setup-env": "docker-compose --file src/tests/docker-compose.yml --env-file ./tests/.env.test up -d",
    "test:integration": "jest --config=jest-config.js --testPathPattern='.*\\.test\\.js$'",
    "lint": "eslint --ext .jsx --ext .js",
    "lint:fix": "eslint --ext .jsx --ext .js --fix",
    "build": "tsc --project tsconfig.app.json",
    "internal:build:lib-win": "npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.16.0 --arch=x64",
    "internal:build:lib-macos": "npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.16.0 --arch=x64",
    "internal:build:lib-linux": "npm run --prefix node_modules/better-sqlite3 build-release -- --target=v16.16.0 --arch=x64"
  },
  "keywords": [
    "Optimistik"
  ],
  "browserslist": [
    "last 2 chrome versions",
    "last 2 safari versions",
    "last 2 edge versions",
    "last 2 firefox versions",
    "firefox esr"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "3.223.0",
    "@aws-sdk/node-http-handler": "3.222.0",
    "@koa/cors": "4.0.0",
    "@koa/multer": "3.0.0",
    "@koa/router": "12.0.0",
    "ads-client": "1.14.1",
    "argon2": "0.30.3",
    "basic-auth": "2.0.1",
    "better-sqlite3": "8.0.1",
    "cron": "2.2.0",
    "form-data": "4.0.0",
    "humanize-duration": "3.27.3",
    "joi": "17.7.0",
    "jsmodbus": "4.0.6",
    "jsonwebtoken": "9.0.0",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-helmet": "6.1.0",
    "koa-respond": "2.1.0",
    "koa-send": "5.0.1",
    "luxon": "3.1.1",
    "minimist": "1.2.7",
    "mongodb": "4.12.1",
    "mqtt": "4.3.7",
    "mssql": "9.0.1",
    "mysql2": "2.3.3",
    "nanoid": "4.0.0",
    "node-fetch": "2.6.7",
    "node-opcua-certificate-manager": "2.85.0",
    "node-opcua-client": "2.85.0",
    "object-path": "0.11.8",
    "papaparse": "5.3.2",
    "pg": "8.8.0",
    "pino": "8.7.0",
    "pino-abstract-transport": "1.0.0",
    "pino-pretty": "9.1.1",
    "pino-roll": "1.0.0-rc.1",
    "proxy-agent": "5.0.0",
    "selfsigned": "2.1.1",
    "sprintf-js": "1.1.2",
    "thread-stream": "2.2.0"
  },
  "devDependencies": {
    "@types/basic-auth": "1.1.3",
    "@types/better-sqlite3": "7.6.3",
    "@types/cron": "2.0.0",
    "@types/jest": "29.2.4",
    "@types/jsonwebtoken": "9.0.1",
    "@types/koa": "2.13.5",
    "@types/koa__multer": "2.0.4",
    "@types/koa-bodyparser": "4.3.10",
    "@types/koa-send": "4.1.3",
    "@types/luxon": "3.1.0",
    "@types/mssql": "^8.1.2",
    "@types/node-fetch": "2.6.2",
    "@types/node-forge": "1.3.1",
    "@types/papaparse": "^5.3.7",
    "@types/pg": "^8.6.6",
    "@types/serialport": "8.0.2",
    "@types/sprintf-js": "^1.1.2",
    "@types/ws": "8.5.4",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.1",
    "dotenv": "16.0.3",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-ban": "1.6.0",
    "eslint-plugin-deprecation": "1.3.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "ncp": "2.0.0",
    "path-browserify": "1.0.1",
    "pkg": "5.8.0",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "standard-version": "9.5.0",
    "ts-jest": "29.0.3",
    "typescript": "4.9.3"
  },
  "optionalDependencies": {
    "oracledb": "5.5.0"
  },
  "pkg": {
    "scripts": [
      "node_modules/vm2/lib/setup-sandbox.js",
      "node_modules/thread-stream/lib/worker.js",
      "node_modules/pino/lib/worker.js"
    ],
    "assets": [
      "dist/frontend/**/*",
      "dist/backend/service/logger/sqlite-transport.js",
      "dist/backend/service/logger/loki-transport.js",
      "node_modules/sqlite3/**/*.node",
      "node_modules/oracledb/**/*.node",
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node"
    ]
  }
}
