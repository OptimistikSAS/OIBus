{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react-hooks"],
  "extends": "airbnb",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "server": false,
    "browser": false,
    "expect": false,
    "logger": "writable"
  },
  "rules": {
    "valid-jsdoc": "error",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": ["OneOf"]
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error", "info", "table"]
      }
    ],
    "linebreak-style": 0,
    "object-curly-newline": ["error", { "multiline": true }],
    "no-param-reassign": ["error", { "props": false }],
    "max-len": ["error", { "code": 150 }],
    "semi": ["error", "never"],
    "jsx-a11y/anchor-is-valid": 1,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never"
      }
    ],
    "arrow-parens": ["error", "always"],
    "react/forbid-prop-types": [
      "error",
      {
        "forbid": ["any", "array"]
      }
    ]
  }
}
