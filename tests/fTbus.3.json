{
  "engine": {
    // switch debug mode
    "debug": true,
    // the port for the web interface to fTbus
    "port": 2222,
    // user/password (use ) (to do: use bcrypt)
    "user": "admin",
    "password": "pass",
    // the list of IP addresses allowed to access the Web Server
    "filter": ["127.0.0.1", "::1"],
    // the scan mode section allow to create categories of scan
    // each categories will use the cron syntax to determine the
    // sequence
    "scanModes": [
      {
        "scanMode": "everySecond",
        "cronTime": "* * * * * *"
      },
      {
        "scanMode": "every5Second",
        "cronTime": "*/5 * * * * *"
      },
      {
        "scanMode": "everyNoon",
        "cronTime": "0 0 12 * * *"
      },
      {
        "scanMode": "every15DaysAt9",
        "cronTime": "0 0 9 */15 * *"
      }
    ],
    // types section allows to define the types managed by this engine
    "types": [
      {
        "type": "fill_level",
        "fields": [
          {
            "name": "value",
            "type": "number"
          }
        ]
      },
      {
        "type": "flow_rate",
        "fields": [
          {
            "name": "quality",
            "type": "boolean"
          }
        ]
      },
      {
        "type": "valve_state",
        "fields": [
          {
            "name": "value",
            "type": "boolean"
          }
        ]
      },
      {
        "type": "temperature",
        "fields": [
          {
            "name": "value",
            "type": "number"
          }
          // {
          //   "name": "quality",
          //   "type": "boolean"
          // }
        ]
      }
    ]
  },
  "south": {
    // this section contains protocol specific parameters
    "Modbus": {
      "addressGap": {
        // max number of Registers in one request
        "holdingRegister": 256,
        // max number of Coils in one request
        "coil": 1000
      }
    },
    "OPCUA": {
      "connectionAddress": {
        "opc": "opc.tcp://%(host)s:%(opcuaPort)s/%(endPoint)s",
        "https": "opc.tcp://%(host)s:%(httpsPort)s/%(endPoint)s"
      }
    },
    "OPCDA": {},
    "MQTT": {},
    "Profinet": {},
    "CSV": {},
    "SQL": {},
    "equipments": [
      {
        "equipmentId": "CSVServer",
        "enabled": true,
        "protocol": "CSV",
        "equipmentRoot": "/fttest.base",
        "defaultScanMode": "every5Second",
        "CSV": {
          "inputFolder": "./tests/csv/input/",
          "archiveFolder": "./tests/csv/archived/",
          "errorFolder": "./tests/csv/error/",
          "separator": ",",
          "timeColumn": 0,
          "hasFirstLine": true
        },
        "points": [
          {
            "value": "sensor1-value",
            "quality": "sensor1-quality",
            "pointId": "./Tank 5.tank/333333.temperature"
          },
          {
            "value": 3,
            "quality": 4,
            "pointId": "./Tank 6.tank/333333.temperature"
          }
        ]
      },
      {
        "equipmentId": "MQTTServer",
        "enabled": false,
        "protocol": "MQTT",
        "equipmentRoot": "/fttest.base",
        "defaultScanMode": "listen",
        "MQTT": {
          "server": "simulator.factorythings.com",
          "protocol": "mqtts",
          "port": "8883",
          "username": "bai",
          "password": "secret"
        },
        "points": [
          {
            "topic": "hello",
            "pointId": "./Tank 5.tank/22.temperature"
          },
          {
            "topic": "bonjour",
            "pointId": "./Tank 6.tank/23.temperature"
          }
        ]
      },
      {
        "equipmentId": "SimulationServer",
        "enabled": true,
        "protocol": "OPCUA",
        "equipmentRoot": "/fttest.base",
        "defaultScanMode": "everySecond",
        "OPCUA": {
          "host": "localhost",
          "opcuaPort": "53530",
          "httpsPort": "53443",
          "endPoint": "Server/Simulation",
          "timeOrigin": "server" // or "source" or "fTbus"
        },
        "points": [
          {
            "ns": "5",
            "s": "Counter1",
            "pointId": "./Tank 5.tank/333333.temperature"
          },
          {
            "ns": "5",
            "s": "Random1",
            "pointId": "./Tank 5.tank/333333.temperature",
            "scanMode": "everyNoon"
          }
        ]
      },
      {
        "equipmentId": "SimulationServerBis",
        "enabled": true,
        "protocol": "OPCUA",
        "equipmentRoot": "/fttest.base",
        "defaultScanMode": "everySecond",
        "OPCUA": {
          "host": "localhost",
          "opcuaPort": "53530",
          "httpsPort": "53443",
          "endPoint": "Server/Simulation"
        },
        "points": [
          {
            "ns": "5",
            "s": "Sinusoid1",
            "pointId": "./Tank 9.tank/333333.temperature"
          }
        ]
      },
      {
        "equipmentId": "PLC-35",
        "enabled": true,
        "protocol": "Modbus",
        "equipmentRoot": "/fttest.base",
        "defaultScanMode": "everySecond",
        "Modbus": {
          "host": "localhost",
          "port": 502
        },
        "points": [
          {
            "address": "0x0031",
            "type": "coil",
            "pointId": "./Tank 3.tank/333333.fill_level"
          },
          {
            "address": "0x0f8",
            "type": "holdingRegister",
            "pointId": "./Tank 2.tank/222222.valve_state",
            "scanMode": "everyNoon"
          },
          {
            "address": "0x76a0",
            "type": "coil",
            "pointId": "./Tank 2.tank/222222.fill_level"
          },
          {
            "address": "0x76b0",
            "type": "coil",
            "pointId": "./Tank 2.tank/222333.fill_level"
          },
          {
            "address": "0x83a6",
            "type": "coil",
            "pointId": "./Tank 3.tank/111111.valve_state"
          }
        ]
      },
      {
        "equipmentId": "PLC-42",
        "enabled": true,
        "protocol": "Modbus",
        "equipmentRoot": "/fttest.base/Tank4.tank",
        "defaultScanMode": "everySecond",
        "Modbus": {
          "host": "localhost",
          "port": 502
        },
        "points": [
          {
            "address": "0x0f",
            "type": "coil",
            "pointId": "./111111.fill_level"
          },
          {
            "address": "0x20",
            "type": "holdingRegister",
            "pointId": "./111111.flow_rate"
          }
        ]
      }
    ]
  },
  "north": {
    "applications": [
      {
        "applicationId": "MyConsole",
        "enabled": true,
        "api": "Console",
        "minimumBuffer:": 1, // 0 -> incorrect value. undefined -> 1
        "timeStamp": "fTbus",
        "Console": {
          "content": "%(pointId)s\n->%(data)s at %(timestamp)s"
        }
      },
      {
        "applicationId": "BaseInflux",
        "enabled": false,
        "api": "InfluxDB",
        "minimumBuffer:": 10, // group by 10 when possible
        "maxTimeinBuffer": 500, // 0 or undefined -> unlimited
        "InfluxDB": {
          "user": "admin",
          "password": "admin",
          "db": "testdata",
          "host": "localhost:8086",
          "insert": "%(host)s/write?db=%(base)s' --data-binary 'zzz,xxx=%(xxx)s,yyytag=%(yyy)s value=10"
        }
      }
    ]
  }
}
