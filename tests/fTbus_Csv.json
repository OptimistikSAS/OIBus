{
  "debug": true,
  "port": 2222,
  "scanModes": [
    {
      "scanMode": "everySecond",
      "cronTime": "* * * * * *"
    },
    {
      "scanMode": "everyNoon",
      "cronTime": "0 0 12 * * *"
    },
    {
      "scanMode": "every15DaysAt9",
      "cronTime": "0 0 9 */15 * *"
    }
  ],
  "modbus": {
    "addressGap": {
      "holdingRegister": 256,
      "coil": 1000
    }
  },
  "opcua": {
    "connectionAddress": {
      "opc": "opc.tcp://%(host)s:%(opcPort)s/%(endPoint)s",
      "https": "opc.tcp://%(host)s:%(httpsPort)s/%(endPoint)s"
    }
  },
  "equipments": [
    {
      "equipmentId": "CSVServer",
      "protocol": "CSV",
      "pointIdRoot": "/fttest.base",
      "defaultScanMode": "everySecond",
      "CSV": {
        "inputFolder": "./tests/fichiers/",
        "archiveFolder": "./tests/archived/",
        "errorFolder": "./tests/error/",
        "separator": ",",
        "timeStampColum": 0,
        "hasFirstLine": true
      },
      "points": [
        {
          "CSV": {
            "column": "sensor1"
          },
          "pointId": "./Tank 5.tank/333333.temperature"
        },
        {
          "CSV": {
            "column": 2
          },
          "pointId": "./Tank 6.tank/333333.temperature"
        },
        {
          "CSV": {

            "column": 3
          },
          "pointId": "./Tank 7.tank/333333.temperature"
        }
      ]
    }
  ],
  "applications": [
    {
      "applicationId": "Myconsole",
      "type": "Console",
      "minimumBuffer:": 1, // 0 -> incorrect value. undefined -> 1
      "timeStamp": "fTbus",
      "Console": {
        "content": "%(pointId)s\n->%(data)s at %(timestamp)s"
      }
    },
    {
      "applicationId": "BaseInflux",
      "type": "InfluxDB",
      "minimumBuffer:": 10, // group by 10 when possible
      "maxTimeinBuffer": 500, // 0 or undefined -> unlimited
      "InfluxDB": {
        "user": "admin",
        "password": "admin",
        "db": "testdata",
        "host": "localhost:8086",
        "insert": "%(host)s/write?db=%(base)s' --data-binary 'zzz,xxx=%(xxx)s,yyytag=%(yyy)s value=10"
      }
    }
  ]
}