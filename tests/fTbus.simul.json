  "north": {
    "applications": [
      {
        "applicationId": "Tank1",
        "enabled": true,
        "api": "Simulator",
        "Simulator": {
          "type": "Tank",
          "fill": "every100ms",
          "capacity": 500,
          "fillPerSecond": 10,
          "emptyPerSecond": 0.1,
          "precision": 0.1
        }
      },
      {
        "applicationId": "Tank2",
        "enabled": true,
        "api": "Simulator",
        "Simulator": {
          "type": "Tank",
          "fill": "every200ms",
          "capacity": 400,
          "fillPerSecond": 5,
          "emptyPerSecond": 0.2,
          "precision": 0.1
        }
      },
      {
          "applicationId": "Mixer",
          "enabled": true,
          "api": "Simulator",
          "Simulator": {
            "type": "Mixer",
            "rotation": "every5minutes",
            "rotationSpeed": 10,
            "rotationDuration": 240,
            "precision": 0.1
          }
        },
        {
          "applicationId": "Remplissage",
          "enabled": true,
          "api": "Simulator",
          "Simulator": {
            "type": "Filler",
            "cadence": "every100ms",
            "alarmChance": 0.01,
            "alarmMinAge": 60, // alarm duration between 1mn to 3mn (random)
            "alarmMaxAge": 180,
            "precision": 0.2
          }
        }
    ]
  }
