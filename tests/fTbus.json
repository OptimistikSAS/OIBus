{
  "debug": true,
  "port": 2222,
  "scanModes": [
    {
      "scanMode": "everySecond",
      "cronTime": "* * * * * *"
    },
    {
      "scanMode": "everyNoon",
      "cronTime": "0 0 12 * * *"
    },
    {
      "scanMode": "every15DaysAt9",
      "cronTime": "0 0 9 */15 * *"
    }
  ],
  "modbus": {
    "addressGap": 1000
  },
  "equipments": [
    {
      "equipmentId": "PLC-35",
      "protocol": "Modbus",
      "pointIdRoot": "/fttest.base",
      "Modbus": {
        "host": "localhost",
        "port": 502
      },
      "points": [
        {
          "Modbus": {
            "address": "0x0031",
            "type": "coil"
          },
          "pointId": "./Tank 3.tank/333333.fill_level#value",
          "type": "number",
          "scanMode": "everySecond"
        },
        {
          "Modbus": {
            "address": "0x0f8",
            "type": "holdingRegister"
          },
          "pointId": "./Tank 2.tank/222222.valve_state#value",
          "type": "boolean",
          "scanMode": "everyNoon"
        },
        {
          "Modbus": {
            "address": "0x76a0",
            "type": "coil"
          },
          "pointId": "./Tank 2.tank/222222.fill_level#value",
          "type": "boolean",
          "scanMode": "every15DaysAt9"
        },
        {
          "Modbus": {
            "address": "0x83a6",
            "type": "coil"
          },
          "pointId": "./Tank 3.tank/111111.valve_state#value",
          "type": "boolean",
          "scanMode": "every15DaysAt9"
        }
      ]
    },
    {
      "equipmentId": "PLC-42",
      "protocol": "Modbus",
      "pointIdRoot": "/fttest.base/Tank4.tank",
      "Modbus": {
        "host": "localhost",
        "port": 502
      },
      "points": [
        {
          "Modbus": {
            "address": "0x0f",
            "type": "coil"
          },
          "pointId": "./111111.fill_level#value",
          "type": "number",
          "scanMode": "everySecond"
        },
        {
          "Modbus": {
            "address": "0x20",
            "type": "holdingRegister"
          },
          "pointId": "./111111.fill_level#flow_rate",
          "type": "number",
          "scanMode": "everySecond"
        }
      ]
    }
  ],
  "applications": [
    {
     "applicationId": "Myconsole",
      "type": "Console",
      "minimumBuffer:": 1, // 0 -> incorrect value. undefined -> 1
      "timeStamp": "fTbus",
      "Console": {
        "content": "%(pointId)s->%(value)s at %(time)s"
      }
    },
    {
      "applicationId": "BaseInflux",
      "type": "InfluxDB",
      "minimumBuffer:": 10, // group by 10 when possible
      "maxTimeinBuffer": 500, // 0 or undefined -> unlimited
      "InfluxDB" : {
        "user": "admin",
        "password": "admin",
        "db": "testdata",
        "host": "localhost:9000",
        "insert" : "%(host)s/write?db=%(db)s' --data-binary 'zzz,xxx=%(xxx)s,yyytag=%(yyy)s value=10"
      }
    }
  ]
}


